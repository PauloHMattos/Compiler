function IsEven(n : int) : bool
{
    var mod = n
    while (mod > 0)
    {
        mod = mod - 2
    }
    return mod == 0
}

function main()
{
    print("Digite um numero: ")
    var n = int(input())
    if IsEven(n)
    {
        print("É par")
    }
    else
    {
        print("Não é par")
    }
    input()
}