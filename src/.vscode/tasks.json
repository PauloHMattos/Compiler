{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        // Builds the specified source project as selected by the user
        {
            "label": "build-csproj",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "build",
                "${input:csproj}"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        // Builds the solution and runs the test projects in the solution
        {
            "label": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=opencover"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        // Builds the solution and runs the test samples project
        {
            "label": "test samples",
            "group": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "Compiler.Tests.Samples/Compiler.Tests.Samples.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=opencover"
            ],
            "problemMatcher": "$msCompile"
        },
        // Cleans the build outputs of the solution
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "clean"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        // Builds the specified sample project as selected by the user
        {
            "label": "build-pysproj",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/../Samples"
            },
            "args": [
                "build",
                "${input:pysproj}"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "pysc",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.+)\\((\\d+,\\d+,\\d+,\\d+)\\):\\s+(.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        },
        // Builds and Runs the specified sample project as selected by the user
        {
            "label": "run-pysproj",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/../Samples"
            },
            "args": [
                "run",
                "--project",
                "${input:pysproj}"
            ],
            "presentation": {
                "focus": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "pysc",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.+)\\((\\d+,\\d+,\\d+,\\d+)\\):\\s+(.+)$",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ]
            }
        }
    ],
    "inputs": [
        // Inputs for the source projects. Be sure to update the list if you've added new project(s).
        {
            "id": "csproj",
            "type": "pickString",
            "description": "Pick your Source project",
            "options": [
                "Compiler.Application",
                "Compiler",
                "Compiler.Generators",
                "Compiler.Tests",
                "Compiler.Tests.Samples",
            ],
            "default": "Compiler.Application"
        },
        // Inputs for the sample projects. Be sure to update the list if you've added new project(s).
        {
            "id": "pysproj",
            "type": "pickString",
            "description": "Pick your Sample project",
            "options": [
                "HelloWorld",
                "Evaluation",
                "Enum",
                "Input",
                "IsEven",
                "Overloads",
                "Structs",
            ],
            "default": "HelloWorld"
        }
    ]
}